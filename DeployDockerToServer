ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo apt update'
ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo apt upgrade -y'
ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo apt install apt-transport-https ca-certificates curl gnupg2 software-properties-common -y'
ssh -o StrictHostKeyChecking=no test@${serverip} 'curl -fsSL https://download.docker.com/linux/debian/gpg | sudo apt-key add -'
ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/debian $(lsb_release -cs) stable"'
ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo apt update'
ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo apt-cache policy docker-ce'
ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo apt install docker-ce -y'
ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo usermod -aG docker ${USER}'
ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo systemctl enable docker'
ssh -o StrictHostKeyChecking=no test@${serverip} 'sudo systemctl start docker'
